--[[
    MHBL-HUB | ORION ULTIMATE (H·∫æT L·ªé)
    Giao di·ªán: Orion Library
    T√≠nh nƒÉng: Full Sea 3, Fast Attack, Auto Stats, Auto Store Fruit
]]

-- 0. T·ªêI ∆ØU & ANTI-AFK
if not game:IsLoaded() then game.Loaded:Wait() end
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    game:GetService("VirtualUser"):Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
    task.wait(1)
    game:GetService("VirtualUser"):Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
end)

-- 1. KI·ªÇM TRA KEY
if getgenv().Key ~= "MHBL-HUB" then
    game.Players.LocalPlayer:Kick("Sai Key! Vui l√≤ng d√πng: MHBL-HUB")
    return
end

-- 2. KH·ªûI T·∫†O UI
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({
    Name = "MHBL-HUB | PREMIUM üçå", 
    HidePremium = false, 
    SaveConfig = true, 
    ConfigFolder = "MHBL_Configs",
    IntroText = "MHBL-HUB LOADING..."
})

-- 3. BI·∫æN ƒêI·ªÄU KHI·ªÇN
_G.AutoFarm = false
_G.FastAttack = true
_G.AutoStats = false
_G.StatPoint = "Melee"
_G.AutoStore = false

-- 4. H√ÄM H·ªñ TR·ª¢
local function Tween(Target)
    pcall(function()
        local Distance = (Target.p - game.Players.LocalPlayer.Character.HumanoidRootPart.Position).Magnitude
        game:GetService("TweenService"):Create(game.Players.LocalPlayer.Character.HumanoidRootPart, TweenInfo.new(Distance/350, Enum.EasingStyle.Linear), {CFrame = Target}):Play()
    end)
end

-- Fast Attack Loop
spawn(function()
    while task.wait() do
        if _G.AutoFarm and _G.FastAttack then
            pcall(function()
                game:GetService("VirtualUser"):CaptureController()
                game:GetService("VirtualUser"):Button1Down(Vector2.new(1280, 672))
            end)
        end
    end
end)

-- 5. C√ÅC TAB CH·ª®C NƒÇNG
local Tab1 = Window:MakeTab({ Name = "T·ªïng Quan", Icon = "rbxassetid://4483345998" })
local Tab2 = Window:MakeTab({ Name = "C√†y C·∫•p", Icon = "rbxassetid://4483345998" })
local Tab3 = Window:MakeTab({ Name = "Tr√°i √Åc Qu·ª∑", Icon = "rbxassetid://4483345998" })
local Tab4 = Window:MakeTab({ Name = "D·ªãch Chuy·ªÉn", Icon = "rbxassetid://4483345998" })
local Tab5 = Window:MakeTab({ Name = "Ch·ªâ S·ªë", Icon = "rbxassetid://4483345998" })

-- [ TAB T·ªîNG QUAN ]
Tab1:AddLabel("Ch√†o m·ª´ng: "..game.Players.LocalPlayer.DisplayName)
Tab1:AddLabel("C·∫•p ƒë·ªô hi·ªán t·∫°i: "..game.Players.LocalPlayer.Data.Level.Value)
Tab1:AddParagraph("L∆∞u √Ω:","B·∫£n Hub n√†y t·ªëi ∆∞u cho Sea 3. N·∫øu g·∫∑p l·ªói h√£y b√°o Admin!")

-- [ TAB C√ÄY C·∫§P ]
Tab2:AddToggle({
    Name = "Auto Farm Level (Sea 3)",
    Default = false,
    Callback = function(Value) _G.AutoFarm = Value end    
})

Tab2:AddToggle({
    Name = "ƒê√°nh Si√™u Nhanh (Fast Attack)",
    Default = true,
    Callback = function(Value) _G.FastAttack = Value end    
})

-- [ TAB TR√ÅI √ÅC QU·ª∂ ]
Tab3:AddButton({
    Name = "Quay Tr√°i √Åc Qu·ª∑ (Random)",
    Callback = function() game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Cousin","BuyItem") end
})

Tab3:AddToggle({
    Name = "T·ª± ƒê·ªông C·∫•t Tr√°i (Auto Store)",
    Default = false,
    Callback = function(Value) 
        _G.AutoStore = Value 
        spawn(function()
            while _G.AutoStore do
                task.wait(2)
                for _, v in pairs(game.Players.LocalPlayer.Backpack:GetChildren()) do
                    if v:IsA("Tool") and v:FindFirstChild("Fruit") then
                        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("StoreFruit", v:GetAttribute("FruitName"), v)
                    end
                end
            end
        end)
    end    
})

-- [ TAB D·ªäCH CHUY·ªÇN ]
Tab4:AddButton({ Name = "Dinh Th·ª± (Mansion)", Callback = function() Tween(CFrame.new(-12463, 374, -7523)) end })
Tab4:AddButton({ Name = "ƒê·∫£o R√πa (Turtle)", Callback = function() Tween(CFrame.new(-13274, 532, -8038)) end })
Tab4:AddButton({ Name = "ƒê·∫£o N·ªØ Nhi (Hydra)", Callback = function() Tween(CFrame.new(5745, 610, -280)) end })
Tab4:AddButton({ Name = "ƒê·∫£o B√°nh (Cake)", Callback = function() Tween(CFrame.new(-2020, 38, -12124)) end })

-- [ TAB CH·ªà S·ªê ]
Tab5:AddDropdown({
    Name = "Ch·ªçn ch·ªâ s·ªë",
    Default = "Melee",
    Options = {"Melee", "Defense", "Sword", "Demon Fruit"},
    Callback = function(Value) _G.StatPoint = Value end
})

Tab5:AddToggle({
    Name = "T·ª± ƒê·ªông N√¢ng ƒêi·ªÉm",
    Default = false,
    Callback = function(Value) 
        _G.AutoStats = Value 
        spawn(function()
            while _G.AutoStats do
                task.wait(1)
                game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("AddPoint", _G.StatPoint, 3)
            end
        end)
    end    
})

OrionLib:Init()
