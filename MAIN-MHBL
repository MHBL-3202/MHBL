-- 1. H·ªÜ TH·ªêNG CHECK KEY
if getgenv().Key ~= "MHBL-HUB" then
    local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
    local Frame = Instance.new("Frame", ScreenGui)
    Frame.Size = UDim2.new(0, 300, 0, 100)
    Frame.Position = UDim2.new(0.5, -150, 0.5, -50)
    Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    local Text = Instance.new("TextLabel", Frame)
    Text.Size = UDim2.new(1, 0, 1, 0)
    Text.Text = "SAI KEY! VUI L√íNG D√ôNG KEY: MHBL-HUB"
    Text.TextColor3 = Color3.new(1, 0, 0)
    Text.BackgroundTransparency = 1
    task.wait(5)
    game.Players.LocalPlayer:Kick("Sai Key MHBL-HUB!")
    return
end

-- 2. LOAD TH∆Ø VI·ªÜN GIAO DI·ªÜN
local RedzLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/R3TH-PRIV/R3THPRIV/main/RedzLibV2.lua"))()

-- 3. KH·ªûI T·∫†O MENU
local Window = RedzLib:MakeWindow({
  Title = "MHBL-HUB | VIETNAM üáªüá≥",
  SubTitle = "Premium Blox Fruit",
  Icon = "rbxassetid://7045155183", -- ·∫¢nh c·ªù Vi·ªát Nam
  SaveFolder = "MHBL_Config.json"
})

-- 4. C√ÅC T√çNH NƒÇNG (D·ª∞A TR√äN FILE B·∫†N G·ª¨I)
local Tab1 = Window:CreateTab("Auto Farm", "home")
local Tab2 = Window:CreateTab("Tr√°i √Åc Qu·ª∑", "apple")

_G.AutoFarm = false
_G.FastAttack = true

-- Logic ƒê√°nh Nhanh & Farm
spawn(function()
    while task.wait() do
        if _G.AutoFarm and _G.FastAttack then
            pcall(function()
                local vu = game:GetService("VirtualUser")
                vu:CaptureController()
                vu:Button1Down(Vector2.new(1280, 672))
            end)
        end
    end
end)

Tab1:AddToggle({
  Name = "Auto Farm Level (Sea 3)",
  Default = false,
  Callback = function(Value) _G.AutoFarm = Value end
})

Tab1:AddToggle({
  Name = "Fast Attack (ƒê√°nh Si√™u Nhanh)",
  Default = true,
  Callback = function(Value) _G.FastAttack = Value end
})

Tab2:AddButton({
  Name = "Quay Tr√°i √Åc Qu·ª∑ (Random)",
  Callback = function() 
    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Cousin","BuyItem") 
  end
})

Tab2:AddButton({
  Name = "T·ª± ƒê·ªông C·∫•t Tr√°i",
  Callback = function()
    for _, v in pairs(game.Players.LocalPlayer.Backpack:GetChildren()) do
        if v:IsA("Tool") and v:FindFirstChild("Fruit") then
            game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("StoreFruit", v:GetAttribute("FruitName"), v)
        end
    end
  end
})

print("MHBL-HUB LOADED!")
