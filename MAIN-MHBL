--[[
    MHBL-HUB | ORION PREMIUM EDITION
    Giao di·ªán: Orion UI (Hi·ªán ƒë·∫°i & M∆∞·ª£t)
    T√≠nh nƒÉng: Full Sea 3, Fast Attack, Auto Stats, Info Dashboard
]]

-- 0. T·ªêI ∆ØU & ANTI-AFK
if not game:IsLoaded() then game.Loaded:Wait() end
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    game:GetService("VirtualUser"):Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
    task.wait(1)
    game:GetService("VirtualUser"):Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
end)

-- 1. KI·ªÇM TRA KEY
if getgenv().Key ~= "MHBL-HUB" then
    game.Players.LocalPlayer:Kick("Sai Key! Vui l√≤ng d√πng: MHBL-HUB")
    return
end

-- 2. KH·ªûI T·∫†O UI ORION
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({
    Name = "MHBL-HUB | PREMIUM üçå", 
    HidePremium = false, 
    SaveConfig = true, 
    ConfigFolder = "MHBL_Configs",
    IntroText = "MHBL-HUB PREMIUM"
})

-- 3. BI·∫æN ƒêI·ªÄU KHI·ªÇN
_G.AutoFarm = false
_G.FastAttack = true
_G.AutoStats = false
_G.StatPoint = "Melee"

-- 4. H√ÄM H·ªñ TR·ª¢
local function Tween(Target)
    pcall(function()
        local Distance = (Target.p - game.Players.LocalPlayer.Character.HumanoidRootPart.Position).Magnitude
        game:GetService("TweenService"):Create(game.Players.LocalPlayer.Character.HumanoidRootPart, TweenInfo.new(Distance/350, Enum.EasingStyle.Linear), {CFrame = Target}):Play()
    end)
end

-- Fast Attack Loop
spawn(function()
    while task.wait() do
        if _G.AutoFarm and _G.FastAttack then
            pcall(function()
                game:GetService("VirtualUser"):CaptureController()
                game:GetService("VirtualUser"):Button1Down(Vector2.new(1280, 672))
            end)
        end
    end
end)

-- 5. C√ÅC TAB CH·ª®C NƒÇNG
local Tab1 = Window:MakeTab({ Name = "Th√¥ng Tin", Icon = "rbxassetid://4483345998" })
local Tab2 = Window:MakeTab({ Name = "Auto Farm", Icon = "rbxassetid://4483345998" })
local Tab3 = Window:MakeTab({ Name = "D·ªãch Chuy·ªÉn", Icon = "rbxassetid://4483345998" })
local Tab4 = Window:MakeTab({ Name = "Ch·ªâ S·ªë", Icon = "rbxassetid://4483345998" })

-- [ TAB 1: TH√îNG TIN NH√ÇN V·∫¨T ]
Tab1:AddLabel("T√™n: "..game.Players.LocalPlayer.DisplayName)
Tab1:AddLabel("Level: "..game.Players.LocalPlayer.Data.Level.Value)
Tab1:AddLabel("Beli: "..game.Players.LocalPlayer.Data.Beli.Value)
Tab1:AddLabel("--- CH√öC B·∫†N CH∆†I GAME VUI V·∫∫ ---")

-- [ TAB 2: AUTO FARM ]
Tab2:AddToggle({
    Name = "Auto Farm Level (Sea 3 Full)",
    Default = false,
    Callback = function(Value) _G.AutoFarm = Value end    
})

Tab2:AddToggle({
    Name = "ƒê√°nh Si√™u Nhanh (Fast Attack)",
    Default = true,
    Callback = function(Value) _G.FastAttack = Value end    
})

Tab2:AddButton({
    Name = "T·ª± ƒê·ªông Quay Tr√°i (Random Fruit)",
    Callback = function() game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Cousin","BuyItem") end
})

-- [ TAB 3: D·ªäCH CHUY·ªÇN ]
Tab3:AddLabel("ƒê·ªãa ƒêi·ªÉm Sea 3 Ch√≠nh")
Tab3:AddButton({ Name = "T·ªõi Mansion", Callback = function() Tween(CFrame.new(-12463, 374, -7523)) end })
Tab3:AddButton({ Name = "T·ªõi Floating Turtle", Callback = function() Tween(CFrame.new(-13274, 532, -8038)) end })
Tab3:AddButton({ Name = "T·ªõi Hydra Island", Callback = function() Tween(CFrame.new(5745, 610, -280)) end })
Tab3:AddButton({ Name = "T·ªõi Cake Land", Callback = function() Tween(CFrame.new(-2020, 38, -12124)) end })

-- [ TAB 4: CH·ªà S·ªê ]
Tab4:AddDropdown({
    Name = "Ch·ªçn ch·ªâ s·ªë n√¢ng",
    Default = "Melee",
    Options = {"Melee", "Defense", "Sword", "Demon Fruit"},
    Callback = function(Value) _G.StatPoint = Value end
})

Tab4:AddToggle({
    Name = "B·∫≠t Auto C·ªông ƒêi·ªÉm",
    Default = false,
    Callback = function(Value) _G.AutoStats = Value end    
})

-- V√≤ng l·∫∑p c·ªông ƒëi·ªÉm
spawn(function()
    while task.wait(1) do
        if _G.AutoStats then
            game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("AddPoint", _G.StatPoint, 3)
        end
    end
end)

OrionLib:Init()
